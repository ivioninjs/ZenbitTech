# To determine the name of your containers
PROJECT_NAME=birsoz

# mode
MODE=development

# Web SERVER
NODEJS17=node17

# If you already have the port 80 in use, you can change it (for example if you have Apache)
HOST_MACHINE_UNSECURE_HOST_PORT=3000

# If you already have the port 443 in use, you can change it (for example if you have Apache)
HOST_MACHINE_SECURE_HOST_PORT=443


# If you already have the port 3306 in use, you can change it (for example if you have MySQL)
HOST_MACHINE_MYSQL_PORT=3306
HOST_MACHINE_POSTGRES_PORT=5432

# If you already have the port 8080 in use, you can change it (for example if you have PMA)
HOST_MACHINE_PMA_PORT=8080

# If you already has the port 6379 in use, you can change it (for example if you have Redis)
HOST_MACHINE_REDIS_PORT=6379


# data manager
PG_ADMIN=pgAdmin
PHP_ADMIN=phpAdmin

ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD=root

UPLOAD_LIMIT=512M
MEMORY_LIMIT=512M

# Database name
MYSQL8=mysql8
POSTGRES12=postgres

# Database settings: init, data and logs
MYSQL_INITDB_DIR=./config/initdb
MYSQL_DATA_DIR=./data/mysql
MYSQL_LOG_DIR=./logs/mysql

# MySQL root user password
MYSQL_ROOT_PASSWORD=root

# Database settings: Username, password and database name
# 
# If you need to give the docker user access to more databases than the "docker" db
# you can grant the privileges with phpmyadmin to the user.
MYSQL_DATABASE=ilbirs
MYSQL_USER=admin
MYSQL_PASSWORD=root


POSTGRES_DB_NAME=postgres
# https://stackoverflow.com/questions/33357567/econnrefused-for-postgres-on-nodejs-with-dockers
# service name
POSTGRES_HOST=database
POSTGRES_USER=admin
POSTGRES_PASSWORD=root